@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .product-image-container {
        position: relative;
        width: 100%;
        padding-top: 100%; /* Tạo container hình vuông */
        overflow: hidden;
        border-radius: 0.375rem 0.375rem 0 0;
    }
    .product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain; /* Giữ tỷ lệ ảnh, không bị méo */
        padding: 0.5rem;
        background: #f8f9fa;
    }
    .product-card .card-body {
        padding: 1.25rem;
    }
    .product-title {
        font-size: 1rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        height: 2.4rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
    .product-price {
        color: #dc3545;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .btn-view-detail {
        width: 100%;
        margin-top: 0.5rem;
        transition: all 0.2s ease;
    }
    .btn-view-detail:hover {
        background-color: #0d6efd;
        color: white;
    }
    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }
    .category-card {
        background: #fff;
        border-radius: 0.5rem;
        padding: 1rem;
        text-align: center;
        transition: all 0.2s ease;
        border: 1px solid #dee2e6;
    }
    .category-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 .25rem .5rem rgba(0,0,0,.1);
        border-color: #0d6efd;
    }
    .category-icon {
        font-size: 2rem;
        color: #0d6efd;
        margin-bottom: 0.5rem;
    }
    .category-name {
        font-weight: 500;
        margin-bottom: 0.25rem;
    }
    .category-count {
        font-size: 0.875rem;
        color: #6c757d;
    }
    .category-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 2rem;
    }
    .category-item {
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 2rem;
        padding: 0.5rem 1rem;
        text-align: center;
        transition: all 0.2s ease;
        text-decoration: none;
        color: #212529;
        font-size: 0.9rem;
    }
    .category-item:hover {
        background: #0d6efd;
        border-color: #0d6efd;
        color: white;
    }
    .category-icon {
        margin-right: 0.25rem;
    }
    .category-count {
        background: #f8f9fa;
        border-radius: 1rem;
        padding: 0.125rem 0.5rem;
        font-size: 0.75rem;
        color: #6c757d;
        margin-left: 0.5rem;
    }
    .category-item:hover .category-count {
        background: rgba(255,255,255,0.2);
        color: white;
    }
</style>

@if (User.IsInRole("Admin"))
{
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold text-body-emphasis">
            <i class="bi bi-shop"></i> CellPhoneIV - Quản lý
        </h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
                Hệ thống quản lý sản phẩm và danh mục điện thoại.
                Dễ dàng thêm, sửa, xóa và quản lý hình ảnh sản phẩm.
            </p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="bi bi-box"></i> Xem sản phẩm
                </a>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-tags"></i> Xem danh mục
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4 py-5">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-box display-1 text-primary"></i>
                    <h3 class="card-title mt-3">Quản lý sản phẩm</h3>
                    <p class="card-text">Thêm, sửa, xóa sản phẩm. Upload nhiều hình ảnh cho mỗi sản phẩm.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-tags display-1 text-success"></i>
                    <h3 class="card-title mt-3">Quản lý danh mục</h3>
                    <p class="card-text">Phân loại sản phẩm theo danh mục. Dễ dàng tìm kiếm và quản lý.</p>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-success">
                        <i class="bi bi-arrow-right"></i> Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="hero bg-primary text-white py-5 mb-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold">CellPhoneIV</h1>
                    <p class="lead">Khám phá bộ sưu tập điện thoại đa dạng và chất lượng của chúng tôi.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="bi bi-shop"></i> Xem tất cả
                    </a>
                </div>
                <div class="col-lg-6 text-center">
                    <i class="bi bi-phone display-1"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <h2 class="h5 mb-2">Danh mục sản phẩm</h2>
        <div class="category-list">
            @foreach (var category in ViewBag.Categories ?? new List<WebApp.Models.Category>())
            {
                <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" 
                   class="category-item">
                    @{
                        var icon = category.Name.ToLower() switch
                        {
                            "phone" => "bi-phone",
                            "laptop" => "bi-laptop",
                            "desktop" => "bi-pc-display",
                            "keyboard" => "bi-keyboard",
                            "mouse" => "bi-mouse",
                            _ => "bi-grid"
                        };
                    }
                    <i class="bi @icon category-icon"></i>
                    @category.Name
                    <span class="category-count">@category.Products.Count</span>
                </a>
            }
        </div>

        <h2 class="h4 mb-3">Sản phẩm nổi bật</h2>
        <div class="row g-4">
            @foreach (var product in ViewBag.FeaturedProducts ?? new List<WebApp.Models.Product>())
            {
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm product-card">
                        <div class="product-image-container">
                            @if (!string.IsNullOrEmpty(product.MainImage))
                            {
                                <img src="@product.MainImage" class="product-image" alt="@product.Name">
                            }
                            else
                            {
                                <div class="product-image d-flex align-items-center justify-content-center">
                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="product-title">@product.Name</h5>
                            <p class="product-price mb-2">@product.Price.ToString("N0") ₫</p>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" 
                               class="btn btn-outline-primary btn-view-detail">
                                <i class="bi bi-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
