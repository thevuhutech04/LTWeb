@model LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h2>Đăng nhập</h2>
            <p>Chào mừng bạn trở lại!</p>
        </div>

        <form asp-action="Login" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu" />
                <label asp-for="Password">Mật khẩu</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mb-3">Đăng nhập</button>
            
            <div class="text-center">
                <p>Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a></p>
            </div>
        </form>
    </div>
</div>

<style>
.login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(-45deg, #0575E6, #021B79, #0575E6, #00F260);
    background-size: 400% 400%;
    animation: gradientBg 15s ease infinite;
    padding: 20px;
}

@@keyframes gradientBg {
    0% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
}

.login-box {
    width: 100%;
    max-width: 400px;
    background: rgba(255, 255, 255, 0.9);
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
    transform: perspective(1000px) rotateX(0deg);
    transition: transform 0.5s;
}

.login-box:hover {
    transform: perspective(1000px) rotateX(5deg);
}

.login-header {
    text-align: center;
    margin-bottom: 30px;
}

.login-header h2 {
    color: #333;
    font-size: 2rem;
    margin-bottom: 10px;
}

.login-header p {
    color: #666;
    font-size: 1rem;
}

.login-form .form-floating {
    position: relative;
    margin-bottom: 20px;
}

.login-form .form-control {
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid #e1e1e1;
    border-radius: 10px;
    padding: 15px;
    height: auto;
    transition: all 0.3s;
}

.login-form .form-control:focus {
    border-color: #6B73FF;
    box-shadow: 0 0 15px rgba(107, 115, 255, 0.2);
}

.btn-primary {
    background: linear-gradient(135deg, #6B73FF 0%, #000DFF 100%);
    border: none;
    border-radius: 10px;
    padding: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: transform 0.3s, box-shadow 0.3s;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(107, 115, 255, 0.4);
}

.form-check-input:checked {
    background-color: #6B73FF;
    border-color: #6B73FF;
}

a {
    color: #6B73FF;
    text-decoration: none;
    transition: color 0.3s;
}

a:hover {
    color: #000DFF;
}
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 