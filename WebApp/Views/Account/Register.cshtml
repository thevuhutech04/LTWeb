@model RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="register-container">
    <div class="register-box">
        <div class="register-header">
            <h2>Đăng ký tài khoản</h2>
            <p>Tạo tài khoản mới để trải nghiệm!</p>
        </div>

        <form asp-action="Register" method="post" class="register-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
                <label asp-for="FullName">Họ và tên</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu" />
                <label asp-for="Password">Mật khẩu</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Xác nhận mật khẩu" />
                <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <select asp-for="Role" class="form-select">
                    <option value="User">Người dùng</option>
                    <option value="Admin">Quản trị viên</option>
                </select>
                <label asp-for="Role">Quyền</label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mb-3">Đăng ký</button>
            
            <div class="text-center">
                <p>Đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
            </div>
        </form>
    </div>
</div>

<style>
.register-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(-45deg, #0575E6, #021B79, #0575E6, #00F260);
    background-size: 400% 400%;
    animation: gradientBg 15s ease infinite;
    padding: 20px;
}

@@keyframes gradientBg {
    0% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
}

.register-box {
    width: 100%;
    max-width: 400px;
    background: rgba(255, 255, 255, 0.9);
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
    transform: perspective(1000px) rotateX(0deg);
    transition: transform 0.5s;
}

.register-box:hover {
    transform: perspective(1000px) rotateX(5deg);
}

.register-header {
    text-align: center;
    margin-bottom: 30px;
}

.register-header h2 {
    color: #333;
    font-size: 2rem;
    margin-bottom: 10px;
}

.register-header p {
    color: #666;
    font-size: 1rem;
}

.register-form .form-floating {
    position: relative;
    margin-bottom: 20px;
}

.register-form .form-control {
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid #e1e1e1;
    border-radius: 10px;
    padding: 15px;
    height: auto;
    transition: all 0.3s;
}

.register-form .form-control:focus {
    border-color: #6B73FF;
    box-shadow: 0 0 15px rgba(107, 115, 255, 0.2);
}

.btn-primary {
    background: linear-gradient(135deg, #6B73FF 0%, #000DFF 100%);
    border: none;
    border-radius: 10px;
    padding: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: transform 0.3s, box-shadow 0.3s;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(107, 115, 255, 0.4);
}

a {
    color: #6B73FF;
    text-decoration: none;
    transition: color 0.3s;
}

a:hover {
    color: #000DFF;
}

.text-danger {
    color: #dc3545;
    font-size: 0.875rem;
    margin-top: 5px;
}

.form-select {
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid #e1e1e1;
    border-radius: 10px;
    padding: 15px;
    height: 60px;
    transition: all 0.3s;
}

.form-select:focus {
    border-color: #6B73FF;
    box-shadow: 0 0 15px rgba(107, 115, 255, 0.2);
}
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 